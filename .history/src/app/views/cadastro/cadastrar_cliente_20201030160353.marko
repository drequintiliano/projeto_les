    <script>
        $(document).ready(function() {
            $("form").submit(function() {
                event.preventDefault();
                $('#myAlert').show('fade');                
                

                setTimeout(function() {
                    $('#myAlert').hide('fade');
                    document.getElementById("cadastroCliente").reset();
                }, 4000)               
            });                  
        });
    </script>

