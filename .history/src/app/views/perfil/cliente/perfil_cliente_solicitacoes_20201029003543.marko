    <!-- Contact Section -->
    <section class="page-section" id="contact">
        <div class="container">

            <br>
            <br>
            <!-- Contact Section Heading -->
            <h2 class="page-section-heading text-center mb-0">Perfil Cliente</h2>
            <br>
            <br>

            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="perfil_cliente.html">Perfil</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Solicitações</li>
                </ol>
            </nav>

            <!-- Contact Section Form -->
            <div class="container-fluid">
                <div class="container">
                    <div class="row py-2">
                        <div class="col-12 col-sm-10 mx-auto py-2">
                            <div class="table-responsive-sm">
                                <table id="solicitacoes" class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col-2">Data e Hora</th>
                                            <th scope="col-1">Profissional</th>
                                            <th scope="col-1">Categoria</th>
                                            <th scope="col-2">Celular</th>
                                            <th scope="col-2">E-mail</th>
                                            <th scope="col-2">Status</th>
                                            <th scope="col-2">Cancelar</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <if(solicitacao.statusId == 3)>
                                            <tr id="solicitacao_${solicitacao.id}" for(solicitacao in data.solicitacoes) class="table-danger">  
                                                <td>${solicitacao.horaSolicitacao}</td>
                                                <td>${solicitacao.nomeProfissional}</td>
                                                <td>${solicitacao.categoria}</td>
                                                <td>${solicitacao.celular}</td>
                                                <td>${solicitacao.email}</td>
                                                <td>${solicitacao.statusDesc}</td>                                               
                                            </tr>                 
                                        </if>
                                        <if(solicitacao.statusId == 2)>
                                            <tr id="solicitacao_${solicitacao.id}" for(solicitacao in data.solicitacoes) class="table-success">  
                                                <td>${solicitacao.horaSolicitacao}</td>
                                                <td>${solicitacao.nomeProfissional}</td>
                                                <td>${solicitacao.categoria}</td>
                                                <td>${solicitacao.celular}</td>
                                                <td>${solicitacao.email}</td>
                                                <td>${solicitacao.statusDesc}</td>
                                                <td>
                                                    <if(solicitacao.statusId != 3)>
                                                        <div class="row">
                                                            <div class="col-6 col-sm-4">
                                                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#cancelarSolicitacao">X</button>
                                                            </div>
                                                        </div>
                                                    </if>                                               
                                                </td>
                                            </tr>                 
                                        </if> 
                                        <else>
                                            <tr id="solicitacao_${solicitacao.id}" for(solicitacao in data.solicitacoes)>  
                                                <td>${solicitacao.horaSolicitacao}</td>
                                                <td>${solicitacao.nomeProfissional}</td>
                                                <td>${solicitacao.categoria}</td>
                                                <td>${solicitacao.celular}</td>
                                                <td>${solicitacao.email}</td>
                                                <td>${solicitacao.statusDesc}</td>
                                                <td>
                                                    <if(solicitacao.statusId != 3)>
                                                        <div class="row">
                                                            <div class="col-6 col-sm-4">
                                                                <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#cancelarSolicitacao">X</button>
                                                            </div>
                                                        </div>
                                                    </if>                                               
                                                </td>
                                            </tr>       
                                        </else>                                                                                     
                                    </tbody>
                                    <!-- Modal -->
                                    <div class="modal fade" id="cancelarSolicitacao" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">Cancelar Solicitação</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Deseja realmente cancelar essa solicitação?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                                                    <button type="button" class="btn btn-primary" data-ref="${solicitacao.id}" data-type="cancelar" data-dismiss="modal">Sim</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    
